{
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"color": "#0077cc",
					"name": "Primary Blue",
					"slug": "primary"
				},
				{
					"color": "#ffaa00",
					"name": "Secondary Orange",
					"slug": "secondary"
				},
				{
					"color": "#f5f5f5",
					"name": "Neutral Light",
					"slug": "neutral"
				},
				{
					"color": "#222222",
					"name": "Dark Gray",
					"slug": "dark"
				}
			]
		},
		"layout": {
			"contentSize": "768px",
			"wideSize": "1280px"
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "'Montserrat', sans-serif",
					"name": "Montserrat",
					"slug": "montserrat"
				}
			],
			"fontSizes": []
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "8px"
				},
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--dark)"
				},
				"spacing": {
					"padding": {
						"bottom": "12px",
						"left": "20px",
						"right": "20px",
						"top": "12px"
					}
				},
				"typography": {
					"fontSize": "clamp(1rem, 1.5vw, 1.125rem)",
					"fontWeight": "600"
				}
			},
			"core/quote": {
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"width": "4px"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--dark)"
				},
				"spacing": {
					"padding": {
						"left": "20px"
					}
				},
				"typography": {
					"fontSize": "clamp(1.25rem, 3vw, 1.5rem)",
					"fontStyle": "italic",
					"fontWeight": "500"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--neutral)",
			"text": "var(--wp--preset--color--dark)"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "8px"
				},
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--dark)"
				},
				"spacing": {
					"padding": {
						"bottom": "12px",
						"left": "20px",
						"right": "20px",
						"top": "12px"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "clamp(2rem, 5vw, 3rem)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "clamp(1.75rem, 4vw, 2.5rem)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "clamp(1.5rem, 3vw, 2rem)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "clamp(1.25rem, 2.5vw, 1.75rem)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "clamp(1.125rem, 2vw, 1.5rem)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "clamp(1rem, 1.75vw, 1.25rem)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--montserrat)"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"version": 3,
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json"
}