{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "768px",
			"wideSize": "1280px",
			"gap": "2rem"
		},
		"spacing": {
			"units": ["%", "px", "em", "rem", "vh", "vw"]
		},
		"typography": {
			"fluidTypography": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system-font"
				},
				{
					"fontFamily": "'Montserrat', sans-serif",
					"name": "Montserrat",
					"slug": "montserrat"
				}
			],
			"fontSizes": []
		},
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#0077cc",
					"name": "Primary Blue"
				},
				{
					"slug": "secondary",
					"color": "#ffaa00",
					"name": "Secondary Orange"
				},
				{
					"slug": "neutral",
					"color": "#f5f5f5",
					"name": "Neutral Light"
				},
				{
					"slug": "dark",
					"color": "#222222",
					"name": "Dark Gray"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--montserrat)"
		},
		"color": {
			"text": "var(--wp--preset--color--dark)",
			"background": "var(--wp--preset--color--neutral)"
		},
		"elements": {
			"body": {
				"typography": {
					"fontSize": "clamp(1rem, 2vw, 1.125rem)",
					"lineHeight": "1.6"
				},
				"color": {
					"text": "var(--wp--preset--color--dark)",
					"background": "var(--wp--preset--color--neutral)"
				}
			},
			"headings": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--montserrat)",
					"fontWeight": "700"
				},
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"button": {
				"color": {
					"text": "var(--wp--preset--color--dark)",
					"background": "var(--wp--preset--color--secondary)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "clamp(2rem, 5vw, 3rem)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "clamp(1.75rem, 4vw, 2.5rem)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "clamp(1.5rem, 3vw, 2rem)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "clamp(1.25rem, 2.5vw, 1.75rem)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "clamp(1.125rem, 2vw, 1.5rem)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "clamp(1rem, 1.75vw, 1.25rem)"
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	]
}
